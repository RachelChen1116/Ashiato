<%- include('partials/header'); %>

<h1 style="text-align:center"><%= vocab.SignUp[lang] %></h1>

<div style="width:30%; margin:25px auto;">
    <form action="/register" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder=<%= vocab.username[lang] %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder=<%= vocab.password[lang] %>>
        </div>
        
        <button class="btn btn-lg btn-success btn-block"><%= vocab.SignUp[lang] %></button>
    </form>
</div>

<%- include('partials/footer'); %>