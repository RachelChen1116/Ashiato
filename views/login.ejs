<%- include('partials/header'); %>

<h1 style="text-align:center"><%= vocab.Login[lang] %></h1>
<div style="width:30%; margin:25px auto;">
    
    <form action="/login" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder=<%= vocab.username[lang] %>>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder=<%= vocab.password[lang] %>>
        </div>
        <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value=<%= vocab.Login[lang] %>>
        </div>
        
    </form>
    
</div>

<%- include('partials/footer'); %>