<%- include('../partials/header'); %>

    <div class="container">
        <div class="row">
            <h1 style="text-align:center"><%= vocab.NewPlace[lang] %></h1>
            <div style="width:30%; margin:25px auto;">
                
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder=<%= vocab.name[lang] %>>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="URL">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder=<%= vocab.description[lang] %>>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block"><%= vocab.Submit[lang] %></button>
                    </div>
                </form>
                
                <a href="/campgrounds"><%= vocab.goback[lang] %></a>   
            </div>
        </div>
    </div>
<%- include('../partials/footer'); %>